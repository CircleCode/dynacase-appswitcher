<?xml version="1.0"?>
<module name="@PACKAGE@" disabled="no" version="@VERSION@"
    release="@RELEASE@">

    <description>An application switcher for Dynacase Platform</description>

    <requires>
        <module comp='ge' version='3.2' name='dynacase-platform'/>
    </requires>

    <post-install>
        <process command="programs/record_application DCP_APP_SWITCHER" />
        <process command="./wsh.php --api=DcpAppSwitcherSetCoreStartApp">
            <label lang="en">Register DCP_APP_SWITCHER as basic switcher application</label>
        </process>
        <process command="programs/update_catalog" />
    </post-install>

    <post-upgrade>
        <process command="programs/pre_migration DCP_APP_SWITCHER" />
        <process command="programs/record_application DCP_APP_SWITCHER" />
        <process command="programs/post_migration DCP_APP_SWITCHER" />
        <process command="./wsh.php --api=DcpAppSwitcherSetCoreStartApp">
            <label lang="en">Register DCP_APP_SWITCHER as basic switcher application</label>
        </process>
        <process command="programs/update_catalog" />
    </post-upgrade>

</module>